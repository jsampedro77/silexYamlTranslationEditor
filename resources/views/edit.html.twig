{% extends 'layout.html.twig' %}

{% block content %}

<form role="form" class="form-horizontal" data-file="{{file}}" target="{{path('save')}}">
{%for key, content in lines%}

    <div class="form-group">
        <label for="{{key}}" class="col-sm-2 control-label">{{key}}</label>
        <div class="col-sm-6">
            <textarea class="form-control translatable-content" rows="3" name="{{key}}" data-key="{{key}}">{{content}}</textarea>
        </div>
        <div class="col-sm-4 well well-sm">
            {%for locale,h in help%}
                {%if h[key] is defined%}
                    <p><strong>{{locale}}:</strong> {{h[key] | raw}}</p>
                    <hr/>
                {%endif%}
            {%endfor%}
        </div>
    </div>


{%endfor%}
</form>
{% endblock %}
